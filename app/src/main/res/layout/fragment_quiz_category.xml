<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/backIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white"
                android:layout_centerVertical="true"
                android:padding="12dp" />
            <TextView
                android:id="@+id/gameNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="@string/shiksha"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/leaderBoardIv"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_podium_game"
                android:layout_toStartOf="@id/infoIv"
                android:layout_centerVertical="true"
                android:layout_marginEnd="14dp" />
            <ImageView
                android:id="@+id/infoIv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_info_game"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"/>
        </RelativeLayout>
        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/background_quiz_green"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <RelativeLayout
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view2"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/quiz_icon" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imageView3"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:padding="8dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Instructions"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/lOneTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="12"
                        android:text="1. Choose the correct answer to earn points."
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="@+id/textView4"
                        app:layout_constraintTop_toBottomOf="@+id/textView4" />

                    <TextView
                        android:id="@+id/lTwoTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. Complete all the given categories."
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="@+id/lOneTv"
                        app:layout_constraintTop_toBottomOf="@+id/lOneTv" />

                    <TextView
                        android:id="@+id/lThreeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="12"
                        android:text="3. Proceed to the next level and buy yourself new items from bazaar."
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="@+id/lTwoTv"
                        app:layout_constraintTop_toBottomOf="@+id/lTwoTv" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4. You can only play 3 times in a day."
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="@+id/lThreeTv"
                        app:layout_constraintTop_toBottomOf="@+id/lThreeTv" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

        <TextView
            android:id="@+id/gamesNotAvlTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shiksha_not_available"
            android:gravity="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lnrExtras"
            android:visibility="gone"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lnrExtras"
            tools:listitem="@layout/quiz_category_adapter" />


        <LinearLayout
            android:id="@+id/lnrExtras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/lnrLevel"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="2"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:elevation="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/button_1_green">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/awardIv"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_level_common"
                    android:layout_toStartOf="@id/levelTv"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/levelTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="2dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_medium" />

                <ImageView
                    android:id="@+id/infoIvOld"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_info_outline_white_24dp"
                    android:visibility="gone"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrPoints"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:elevation="5dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/button_1_green">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/pointsTv"
                    app:srcCompat="@drawable/ic_coin_reward"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/pointsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_medium" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrWheel"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:elevation="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/button_1"
                android:visibility="gone">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/spin_win"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spin Wheel"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrPointsOld"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:elevation="5dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/button_1"
                android:visibility="gone">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/ic_leaderboard"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leader Board"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium"
                    />

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
